<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    android:background="#e5f4fc"
    app:cardUseCompatPadding="false"
    android:clickable="true"
    android:foreground="@drawable/custom_bg"
    android:id="@+id/placeItem"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/def_logo"
                app:siBorderWidth="1dp"
                app:siBorderColor="#eeeeee"/>


        </LinearLayout>

        <LinearLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">




            <LinearLayout

                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="7"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="2dp"
                        android:textStyle="bold"
                        android:id="@+id/name"
                        android:textColor="#000"
                        android:textSize="13sp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginBottom="2dp"
                        android:id="@+id/short_msg"
                        android:textSize="11sp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:text=""
                        android:maxWidth="200dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>




                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="right|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">


                    <TextView

                        android:id="@+id/nbrMessage"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/defaultColor"
                        android:background="@drawable/bg_notify"
                        android:text="2066"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/date"
                        android:textSize="10sp"
                        android:gravity="end"
                        android:layout_gravity="right|center_horizontal"
                        android:text="Aujourd'hui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />





                </LinearLayout>




            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

</android.support.v7.widget.CardView>