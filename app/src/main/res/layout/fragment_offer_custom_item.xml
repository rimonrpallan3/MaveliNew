                                            android:textColor="@color/iconColor"
                                            android:textStyle="bold" />





                                    </FrameLayout>

                                </LinearLayout>
                -->




            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_120"
            android:layout_height="@dimen/_60"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/_10"
            android:layout_marginRight="@dimen/_10">

            <LinearLayout
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/priceCutLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:layout_height="0dp"
                    android:layout_gravity="left|center"
                    android:visibility="visible"
                    android:maxLines="1">

                    <ImageView
                        android:id="@+id/offerPriceImgCut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:paddingTop="@dimen/_08"
                        android:paddingRight="@dimen/_08"
                        android:src="@drawable/price_cut_draw"/>

                    <TextView
                        android:id="@+id/offerMainPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:layout_marginRight="@dimen/_04"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="600"
                        android:textSize="@dimen/_12"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </FrameLayout>


                <TextView
                    android:id="@+id/offer"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="50"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/_04"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/iconColor"
                    android:text="Fourth"
                    android:textSize="@dimen/_12" />



            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>


